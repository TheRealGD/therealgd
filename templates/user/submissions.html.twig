{% extends 'user/user.html.twig' %}
{% from 'submission/_macros.html.twig' import submission %}

{% block head %}
  <link rel="canonical" href="{{ url('user_submissions', {username: user.username}) }}">
  {{ include('_includes/meta_pagination.html.twig', {pager: submissions}) }}
{% endblock %}

{% block page_classes %}
  user-submissions-page
{% endblock %}

{% block title %}
  {{ 'user.submissions'|trans }}
{% endblock %}

{% block body %}
  <h1 class="page-heading">{{ block('title') }}</h1>

  {% for submission in submissions %}
    {{ submission(submission) }}
  {% endfor %}

  {{ include('_includes/pagination.html.twig', {pager: submissions}) }}
{% endblock %}

